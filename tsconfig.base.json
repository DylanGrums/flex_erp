{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@flex-erp/auth/*": ["libs/auth/*/src/index.ts"],
      "@flex-erp/cms/*": ["libs/cms/*/src/index.ts"],
      "@flex-erp/shared/*": ["libs/shared/*/src/index.ts"],
      "@flex-erp/shared/context/data-access": [
        "libs/shared/context/data-access/src/index.ts"
      ],
      "@flex-erp/store/*": ["libs/store/*/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
