{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@flex-erp/store/feature": ["libs/store/feature/src/index.ts"],
      "@flex-erp/store/data-access": ["libs/store/data-access/src/index.ts"],
      "@flex-erp/store/types": ["libs/store/types/src/index.ts"],
      "@flex-erp/store/util": ["libs/store/util/src/index.ts"],
      "@flex-erp/store/ui": ["libs/store/ui/src/index.ts"],
      "@flex-erp/store/manifest": ["libs/store/manifest/src/index.ts"],
      "@flex-erp/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@flex-erp/shared/nav": ["libs/shared/nav/src/index.ts"],
      "@flex-erp/auth/types": ["libs/auth/types/src/index.ts"],
      "@flex-erp/auth/util": ["libs/auth/util/src/index.ts"],
      "@flex-erp/auth/ui": ["libs/auth/ui/src/index.ts"],
      "@flex-erp/auth/data-access": ["libs/auth/data-access/src/index.ts"],
      "@flex-erp/auth/feature": ["libs/auth/feature/src/index.ts"],
      "@flex-erp/auth/api": ["libs/auth/api/src/index.ts"],
      "@flex-erp/cms/ui": ["libs/cms/ui/src/index.ts"],
      "@flex-erp/cms/types": ["libs/cms/types/src/index.ts"],
      "@flex-erp/cms/util": ["libs/cms/util/src/index.ts"],
      "@flex-erp/cms/data-access": ["libs/cms/data-access/src/index.ts"],
      "@flex-erp/cms/feature": ["libs/cms/feature/src/index.ts"],
      "@flex-erp/cms/manifest": ["libs/cms/manifest/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
